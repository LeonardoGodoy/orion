<div class="row">
  <div class="col s12 m12 l5 fill">
    <div class="container center c1">
      <%= image_tag 'logo4', class: 'responsive-img custom-image' %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="input-field z-depth-1 custom-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'validate', id: 'email-input', placeholder: "Email", required: "true" %>
          <span class="helper-text" data-error="Email inválido"></span>
        </div>
        <div class="row"></div>
        <div class="input-field z-depth-1 custom-field">
          <%= f.password_field :password, autocomplete: "current-password", class: 'validate', placeholder: "Senha", required: "true" %>
          <span class="helper-text" data-error="Senha inválida"></span>
        </div>

        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-blue accent-2 right forgot" %>
      </div>

      <%= f.submit "Log in", class: 'btn center blue theme custom-button', value: 'Login' %>
      <% end %>
    </div>
  </div>
  <div class="col l7 hide-on-med-and-down blue theme fill valign-wrapper">
    <div class="container c2">
      <div class="row center">
        <%= image_tag 'logo4', class: 'responsive-img custom-image' %>
        <h5 class="white-text">Junte-se aos seus colegas</h5>
      </div>
      <div class="row center">
          <%= image_tag 'group_chat', class: 'responsive-img' %>
      </div>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Disciplines</h1>

<%= form_tag disciplines_path, method: :GET do %>
  <%= fields_for :search, OpenStruct.new(params[:search]) do |f| %>
    <div class="field">
      <%= f.label :search %>
      <%= f.text_field :name %>
    </div>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= discipline.name %></td>
        <td><%= link_to 'Show', discipline %></td>
        <td><%= link_to 'Edit', edit_discipline_path(discipline) %></td>
        <td><%= link_to 'Destroy', discipline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @disciplines %>

<%= link_to 'New Discipline', new_discipline_path %>

<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<%= form_tag groups_path, method: :GET do %>
  <%= fields_for :search, OpenStruct.new(params[:search]) do |f| %>
    <div class="field">
      <%= f.label :search %>
      <%= f.text_field :name %>
    </div>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Institution</th>
      <th>Course</th>
      <th>Discipline</th>
      <th>Name</th>
      <th>Subsctiptions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.institution.try(:name) %></td>
        <td><%= group.course.try(:name) %></td>
        <td><%= group.discipline.try(:name) %></td>
        <td><%= group.name %></td>
        <td><%= group.subscriptions.count %></td>
        <td><%= link_to 'Show', group %></td>
        <td>
          <%= link_to edit_group_path(group) do %>
            <i class="material-icons blue-text accent-2">edit</i>
          <% end %>
        </td>
        <td>
          <%= link_to group, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="material-icons blue-text accent-2">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @groups %>

<%= link_to 'New Group', new_group_path %>
